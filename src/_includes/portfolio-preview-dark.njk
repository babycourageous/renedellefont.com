<article class="flex w-full h-full bg-gray-800 rounded">

  <div class="w-1/3">
    <img class="w-full h-64 object-cover object-left-top" src="/images/portfolio/{{item.thumbnail}}.png"/>
  </div>

  <div class="flex flex-col items-start w-2/3 p-4">
    <h2 class="text-2xl text-gray-100">{{item.client}}</h2>
    <p class="text-gray-300">{{item.blurb}}</p>
    <a class="mt-auto p-2 bg-green-600 text-white rounded" href="{{item.link}}">{{item.linktext}}</a>
  </div>

</article>