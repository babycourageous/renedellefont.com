<article class="flex flex-col w-full h-full bg-gray-800 rounded sm:flex-row">

  <div class="w-full sm:w-1/3">
    <img class="w-full h-64 object-cover object-left-top" src="/images/portfolio/{{item.thumbnail}}.png"/>
  </div>

  <div class="flex flex-col items-start w-full p-4 sm:w-2/3">
    <h2 class="text-2xl text-gray-100">{{item.client}}</h2>
    <p class="text-gray-300 leading-5">{{item.blurb}}</p>
    <a class="mt-4 p-2 bg-green-600 text-white rounded sm:mt-auto " href="{{item.link}}">{{item.linktext}}</a>
  </div>

</article>