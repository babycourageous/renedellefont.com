<article class="flex w-full h-full p-2 bg-white">

  <div class="w-1/3 shadow-xl">
    <img class="w-full h-auto h-64 object-cover object-left-top" src="/images/portfolio/{{item.thumbnail}}.png"/>
  </div>
  <div class="flex flex-col items-start w-2/3 ml-4">
    <h2 class="text-2xl text-gray-800">{{item.client}}</h2>
    <p class="text-gray-700">{{item.blurb}}</p>
    <a class="mt-auto p-2 bg-green-600 text-white rounded" href="{{item.link}}">{{item.linktext}}</a>
  </div>

</article>